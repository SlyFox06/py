import math
radius = float(input("Enter the radius of the cylinder: "))
height = float(input("Enter the height of the cylinder: "))
surface_area = 2 * math.pi * radius * (radius + height)
volume = math.pi * radius**2 * height
lateral_surface_area = 2 * math.pi * radius * height
print(f"Surface Area of the cylinder: {surface_area:.2f} ")
print(f"Volume of the cylinder: {volume:.2f} ")
print(f"Lateral Surface Area of the cylinder: {lateral_surface_area:.2f}")
